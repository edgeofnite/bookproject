<h1><%= @user.username %></h1>

<h2>About Me</h2>
<%= @user.aboutMe %><br/>

<%unless @currentProjects.empty? %>
<h3>Projects in which I am participating</h3>
<table class="sortable" border=1>
  <tr>
  <td>Project Name</td>
  <td>Signing Date</td>
  <td>Days Per Chapter</td>
  <td>Number of Chapters</td>
  <td>Writers</td>
  <td>Editors</td>
  <td>Status</td>
  <td>Owner</td>
  </tr>
  <%= render(:partial => "project/project", :collection => @currentProjects) %>
</table>
<% end %>

<%unless @userProjects.empty? %>
<h3>Projects that I manage</h3>
<table class="sortable" border=1>
  <tr>
  <td>Project Name</td>
  <td>Signing Date</td>
  <td>Days Per Chapter</td>
  <td>Number of Chapters</td>
  <td>Writers</td>
  <td>Editors</td>
  <td>Status</td>
  <td>Owner</td>
  </tr>
  <%= render(:partial => "project/project", :collection => @userProjects) %>
</table>
<% end %>

<% unless @userCompletedBooks.empty? %>
 <h3> My Completed Books</h3>
 <% for book in @userCompletedBooks %>
   <p><%= link_to h(book.title), :controller => "book", :action =>"read", :id => book %></p>
 <% end %>
<% end %>
