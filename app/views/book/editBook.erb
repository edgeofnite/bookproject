<%unless @book.chapters.empty? %>
<h1><%= h(@book.title) %></h1>
<%= render(:partial => "chapter", :collection => @book.chapters[0, @max_chapter])%>
<% end %>
<%if @book.cur_chapter==1%>
<% form_for :book do |form| %>
<%= form.label :BookTitle%>
<%= form.text_field :title %>
<%end%>
<%end%>
<% if @chapter.user == session["person"] || @book.editor == session["person"] %>
<% form_for :chapter do |form| %>
<%= form.label :title %>
<%= form.text_field :title %>
<%= form.text_area :contents, :class=>"widgEditor" %>
<%= form.label :finished %>
<%= form.check_box :finished %>
<%= form.label :edited %>
<%= form.check_box :edited %>
<br/>
<%= form.label :comment %> <br/>
<%= form.text_area :comment, :rows => 5, :cols => 60 %>
<br/>
<%= submit_tag %>
<%end%>
<%end%>
