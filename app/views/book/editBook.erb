<% if @book.cur_chapter == 1 %>
<% form_for :book do |form| %>
<%= form.label "Book Title" %>
<%= form.text_field :title %><br/>
<%= form.label "Keywords (comma separated)" %>
<%= form.text_field :keywords %><br/>
<%= submit_tag "Update Book" %>
<% end %>
<% else %>
<h1><%= h(@book.title) %></h1>
<p>Keywords: <%= h(@book.keywords) %></p>
<% end %>
<%unless @book.chapters.empty? %>
  <%= render(:partial => "chapter", :collection => (@book.chapters-[@chapter])) %>
<% end %>
<% form_for :chapter do |form| %>
<%= form.label :title %>
<%= form.text_field :title %>
<%= form.text_area :contents, :class=>"widgEditor" %>
<%= form.label :finished %>
<%= form.check_box :finished %>
<%= form.label :edited %>
<%= form.check_box :edited %>
<br/>
<%= form.label :comment %> <br/>
<%= form.text_area :comment, :rows => 5, :cols => 60 %>
<br/>
<%= submit_tag "Done" %>
<%end%>
